{% extends 'layout/app.html.twig' %}

{% block title %}Nouvelle organisation{% endblock %}
{% block page_title %}Nouvelle organisation{% endblock %}

{% block content %}
<div class="max-w-2xl">
    <div class="mb-6">
        <a href="{{ path('app_admin_organization_index') }}" class="text-gray-600 hover:text-gray-900">
            ← Retour aux organisations
        </a>
    </div>

    <form method="post" class="bg-white rounded-lg shadow p-6 space-y-4">
        <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nom de l'organisation *</label>
            <input type="text" name="name" id="name" required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>
        
        <div>
            <label for="plan" class="block text-sm font-medium text-gray-700 mb-1">Plan</label>
            <select name="plan" id="plan"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <option value="free">Free</option>
                <option value="pro">Pro</option>
                <option value="enterprise">Enterprise</option>
            </select>
        </div>
        
        <div class="pt-4 flex gap-4">
            <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700 transition cursor-pointer">
                Créer l'organisation
            </button>
            <a href="{{ path('app_admin_organization_index') }}" class="bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300 transition">
                Annuler
            </a>
        </div>
    </form>
</div>
{% endblock %}