{% extends 'layout/app.html.twig' %}

{% block title %}Mon profil{% endblock %}
{% block page_title %}Mon profil{% endblock %}

{% block content %}
<div class="max-w-2xl">
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 px-6 py-8">
            <div class="flex items-center">
                <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mr-6">
                    <span class="text-3xl font-bold text-indigo-600">{{ app.user.name|slice(0,1)|upper }}</span>
                </div>
                <div class="text-white">
                    <h2 class="text-2xl font-bold">{{ app.user.name }}</h2>
                    <p class="text-indigo-200">{{ app.user.email }}</p>
                </div>
            </div>
        </div>
        
        <div class="p-6 space-y-6">
            <div>
                <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-4">Informations</h3>
                <dl class="space-y-4">
                    <div class="flex justify-between">
                        <dt class="text-gray-600">Nom</dt>
                        <dd class="font-medium text-gray-900">{{ app.user.name }}</dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="text-gray-600">Email</dt>
                        <dd class="font-medium text-gray-900">{{ app.user.email }}</dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="text-gray-600">Rôle</dt>
                        <dd>
                            {% set roleLabels = {
                                'ROLE_SUPER_ADMIN': 'Super Admin',
                                'ROLE_ADMIN_ORG': 'Admin Organisation',
                                'ROLE_EDITOR': 'Éditeur',
                                'ROLE_VALIDATOR': 'Validateur',
                                'ROLE_USER': 'Utilisateur'
                            } %}
                            {% set mainRole = app.user.roles|first %}
                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-indigo-100 text-indigo-700">
                                {{ roleLabels[mainRole] ?? mainRole }}
                            </span>
                        </dd>
                    </div>
                    {% if app.user.organization %}
                    <div class="flex justify-between">
                        <dt class="text-gray-600">Organisation</dt>
                        <dd class="font-medium text-gray-900">{{ app.user.organization.name }}</dd>
                    </div>
                    {% endif %}
                    <div class="flex justify-between">
                        <dt class="text-gray-600">Membre depuis</dt>
                        <dd class="font-medium text-gray-900">{{ app.user.createdAt|date('d/m/Y') }}</dd>
                    </div>
                </dl>
            </div>
            
            <div class="pt-4 border-t border-gray-200">
                <a href="{{ path('app_profile_edit') }}" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Modifier mon profil
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}