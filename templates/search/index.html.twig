{% extends 'layout/app.html.twig' %}

{% block title %}Recherche - Legal Docs Generator{% endblock %}
{% block page_title %}Recherche{% endblock %}

{% block content %}
<div class="max-w-4xl">
    {% if query %}
        <div class="mb-6">
            <p class="text-gray-600">
                {{ totalResults }} résultat(s) pour "<span class="font-medium text-gray-900">{{ query }}</span>"
            </p>
        </div>
        
        {% if totalResults == 0 %}
            <div class="bg-white rounded-lg shadow p-8 text-center">
                <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <p class="text-gray-500">Aucun résultat trouvé.</p>
                <p class="text-sm text-gray-400 mt-2">Essayez avec d'autres termes de recherche.</p>
            </div>
        {% else %}
            <div class="space-y-6">
                <!-- Documents -->
                {% if results.documents|length > 0 %}
                    <div class="bg-white rounded-lg shadow">
                        <div class="px-6 py-4 border-b border-gray-100">
                            <h3 class="font-semibold text-gray-900 flex items-center">
                                <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                Documents ({{ results.documents|length }})
                            </h3>
                        </div>
                        <div class="divide-y divide-gray-100">
                            {% for document in results.documents %}
                                <a href="{{ path('app_document_show', {id: document.id}) }}" class="block p-4 hover:bg-gray-50 transition">
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <p class="font-medium text-gray-900">{{ document.template.name }}</p>
                                            <p class="text-sm text-gray-500">DOC-{{ '%05d'|format(document.id) }} • {{ document.createdAt|date('d/m/Y') }}</p>
                                        </div>
                                        {% set statusColors = {
                                            'draft': 'bg-gray-100 text-gray-700',
                                            'review': 'bg-yellow-100 text-yellow-700',
                                            'approved': 'bg-green-100 text-green-700',
                                            'signed': 'bg-blue-100 text-blue-700',
                                            'archived': 'bg-purple-100 text-purple-700'
                                        } %}
                                        {% set statusLabels = {
                                            'draft': 'Brouillon',
                                            'review': 'En revue',
                                            'approved': 'Approuvé',
                                            'signed': 'Signé',
                                            'archived': 'Archivé'
                                        } %}
                                        <span class="px-2.5 py-1 text-xs font-medium rounded-full {{ statusColors[document.status] }}">
                                            {{ statusLabels[document.status] }}
                                        </span>
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
                
                <!-- Templates -->
                {% if results.templates|length > 0 %}
                    <div class="bg-white rounded-lg shadow">
                        <div class="px-6 py-4 border-b border-gray-100">
                            <h3 class="font-semibold text-gray-900 flex items-center">
                                <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6z"></path>
                                </svg>
                                Templates ({{ results.templates|length }})
                            </h3>
                        </div>
                        <div class="divide-y divide-gray-100">
                            {% for template in results.templates %}
                                <a href="{{ path('app_template_show', {id: template.id}) }}" class="block p-4 hover:bg-gray-50 transition">
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <p class="font-medium text-gray-900">{{ template.name }}</p>
                                            <p class="text-sm text-gray-500">{{ template.description|slice(0, 80) }}{% if template.description|length > 80 %}...{% endif %}</p>
                                        </div>
                                        <span class="px-2.5 py-1 text-xs font-medium rounded-full {{ template.visibility == 'global' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700' }}">
                                            {{ template.visibility == 'global' ? 'Global' : 'Privé' }}
                                        </span>
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
                
                <!-- Utilisateurs -->
                {% if results.users|length > 0 %}
                    <div class="bg-white rounded-lg shadow">
                        <div class="px-6 py-4 border-b border-gray-100">
                            <h3 class="font-semibold text-gray-900 flex items-center">
                                <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                </svg>
                                Utilisateurs ({{ results.users|length }})
                            </h3>
                        </div>
                        <div class="divide-y divide-gray-100">
                            {% for user in results.users %}
                                <a href="{{ path('app_admin_user_edit', {id: user.id}) }}" class="block p-4 hover:bg-gray-50 transition">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center mr-4">
                                            <span class="text-indigo-600 font-medium">{{ user.name|slice(0,1)|upper }}</span>
                                        </div>
                                        <div>
                                            <p class="font-medium text-gray-900">{{ user.name }}</p>
                                            <p class="text-sm text-gray-500">{{ user.email }}</p>
                                        </div>
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </div>
        {% endif %}
    {% else %}
        <div class="bg-white rounded-lg shadow p-8 text-center">
            <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <p class="text-gray-500">Entrez un terme de recherche (minimum 2 caractères).</p>
        </div>
    {% endif %}
</div>
{% endblock %}