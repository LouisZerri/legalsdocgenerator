{% extends 'layout/app.html.twig' %}

{% block title %}Modifier {{ template.name }} - Legal Docs Generator{% endblock %}
{% block page_title %}Modifier le template{% endblock %}

{% block content %}
<div class="max-w-4xl">
    <div class="mb-6">
        <a href="{{ path('app_template_show', {id: template.id}) }}" class="text-gray-600 hover:text-gray-900">
            ← Retour au template
        </a>
    </div>

    <form method="post" class="space-y-6">
        <div class="bg-white rounded-lg shadow p-6 space-y-4">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nom du template *</label>
                <input type="text" name="name" id="name" required
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    value="{{ template.name }}">
            </div>
            
            <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                <textarea name="description" id="description" rows="2"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">{{ template.description }}</textarea>
            </div>
            
            <div>
                <label for="visibility" class="block text-sm font-medium text-gray-700 mb-1">Visibilité</label>
                <select name="visibility" id="visibility"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <option value="private" {{ template.visibility == 'private' ? 'selected' : '' }}>Privé (mon organisation)</option>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <option value="global" {{ template.visibility == 'global' ? 'selected' : '' }}>Global (tous les utilisateurs)</option>
                    {% endif %}
                </select>
            </div>
            
            <div>
                <label for="bodyMarkdown" class="block text-sm font-medium text-gray-700 mb-1">Contenu du template *</label>
                <p class="text-xs text-gray-500 mb-2">Utilisez la syntaxe Markdown. Variables : <code class="bg-gray-100 px-1 rounded">{{ '{{nom_variable}}' }}</code></p>
                <textarea name="bodyMarkdown" id="bodyMarkdown" rows="20" required
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 font-mono text-sm">{{ template.bodyMarkdown }}</textarea>
            </div>
        </div>
        
        <div class="flex gap-4">
            <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700 transition cursor-pointer">
                Enregistrer (v{{ template.version + 1 }})
            </button>
            <a href="{{ path('app_template_show', {id: template.id}) }}" class="bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300 transition">
                Annuler
            </a>
        </div>
    </form>
</div>
{% endblock %}